//          return;
//        }
//        console.log("facebook board : ", res)
//        console.log('Post Id: ' + res.id);
//      });
    })
  }

  function logout() {
    FB.logout(function (response) {
      // Person is now logged out
      console.log("logout bye : ", response)
    });
  }

</script>
</body>
</html>
